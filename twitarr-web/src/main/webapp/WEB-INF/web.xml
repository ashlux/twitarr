<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Twitarr Webapp</display-name>

  <servlet>
    <servlet-name>serverStatusMonitor</servlet-name>
    <servlet-class>com.ashlux.twitarr.cron.ServerStatusMonitorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>twitterStatusChangeServlet</servlet-name>
    <servlet-class>com.ashlux.twitarr.twitter.TwitterStatusChangeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>serverStatusMonitor</servlet-name>
    <url-pattern>/cron/ServerStatusMonitorServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>twitterStatusChangeServlet</servlet-name>
    <url-pattern>/TwitterStatusChangeServlet</url-pattern>
  </servlet-mapping>

